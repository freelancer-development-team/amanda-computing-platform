void foo()
{
}

int doLoops(int x, int y, int z)
{
    while (x >= 1)
    {
        do
        {
            for (int i = 2; i > -1; i--)
            {
                switch (y)
                {
                    case 3:
                        z -= 5;
                        break;
                    case 1:
                        z -= 3;
                        break;
                    case 2:
                        z -= 2;
                        break;
                }
            }
            
            y--;
        } while (y % 3 == 2 and z > 2);
        
        # Subdivide
        x /= 2;
    }
}

int main(string[] args)
{
    int i = 13;
    int j = 3;
    int k = 17;
    
    # Call the loops function
    doLoops(i, j, k);
}

