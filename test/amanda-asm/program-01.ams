.section ".code"
.attributes "rx"

# This is the main function for our assembler executable. It loads two
# numbers and then adds them, then  return the value of that sum.
.def @@main?string
	push	l32	$0xdeadbeef
	push	l32	$0xcafebabe
	add 	l32
	ret 	l32
.endef

# This dummy function loads a number and a parameter (given by the offset)
# adds them and then return that value
.def @@help?void
	push	b8	$0xA0
	push	q64 [$0]
	add		b8
	push	q64	[$1]
	add		b8
	ret		b8
.endef

# This function tests labels & control flow
.def @@labels?void
	push	q64	$0xdeadc0de55aa
	push	w16	$0xFF
	w2q
	ceq		q64
	jf		.L2
.L1:
	push	b8	$0xB0
	push	b8	$0x0C
	add		b8
	b2q
.L2:
	ret		q64
.endef

.section ".data"


