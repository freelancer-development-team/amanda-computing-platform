.section ".code"

# References to the native methods
.native $c!!puts@i32@p
.native $c!!putchar@i32@i32
.native $c!!getchar@i32@nil

# Main method
.def @@main?A_string@!l32

	# Call the presentation function
	invoke	print_presentation
	invoke	pause
	invoke	print_prologue
	invoke	pause
	
	# Print a new line
	invoke	print_nl

	# Return zero
	push	l32	$0
	ret		l32
.endef

.def print_presentation
	iload	helloStr
	ccall	$c!!puts@i32@p
	invoke	print_nl
	ret		v0
.endef

.def print_prologue
	iload	str1
	ccall	$c!!puts@i32@p
	invoke	pause
	iload	str2
	ccall	$c!!puts@i32@p
	
	ret		v0
.endef

.def print_nl
	push	l32	$0x0a
	ccall	$c!!putchar@i32@i32
	push	l32 $0x0d
	ccall	$c!!putchar@i32@i32
	ret		v0
.endef

.def pause
	ccall $c!!getchar@i32@nil
	ret v0
.endef

.section ".data"

# References to the C-strings
.local helloStr: .unicode "Hola, Amy... :) Mi nombre es Amanda...\n"
.local str1: .unicode "Naci en junio de 2022, aunque la idea de mi creacion se remonta a un tiempo atras.\nYo soy el resultado de mas de m√°s de 50000 lineas de codigo."
.local str2: .unicode "Fui programada originalmente por J. Marrero, quien me nombro asi por vos."
